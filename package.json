{
  "name": "@bluebase/plugin-json-schema-components",
  "description": "A utility to build pluggable components based on JSON schema!",
  "author": "BlueEast Team <code@blueeast.com>",
  "version": "0.0.3",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.js",
  "repository": "https://github.com/BlueBaseJS/plugin-json-schema-components",
  "license": "MIT",
  "keywords": [],
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "size-limit": [
    {
      "limit": "30 KB",
      "webpack": false,
      "path": "dist/**/!(*.test).js",
      "running": false
    }
  ],
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "src",
        "bluebase/storybook-native"
      ],
      "pattern": "**/*.stories.tsx",
      "outputFile": "bluebase/storybook-native/storybook/storyLoader.js"
    }
  },
  "scripts": {
    "storybook-native:start": "bluebase storybook-native:start",
    "start": "yarn run storybook",
    "clean": "rimraf coverage dist tmp",
    "watch": "tsc -w -p tsconfig.json",
    "watch:test": "jest --watch",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "info": "npm-scripts-info",
    "build": "run-s clean && run-p build:* && cp -r ./dist/src/* ./dist && rm -r ./dist/src && yarn run size",
    "build:main": "tsc -p tsconfig.json && babel ./src --out-dir dist --ignore \"**/__tests__\",\"**/__stories__\" --extensions \".ts,.tsx,.js,.jsx\"",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "fix:md": "remark . -o",
    "test": "run-s build test:*",
    "test:only": "jest --coverage",
    "test:lint": "npm run lint",
    "test:md": "remark . -f",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "commit": "git-cz",
    "report-coverage": "codecov && cat ./coverage/lcov.info | codacy-coverage",
    "doc": "run-s doc:html && run-s doc:build-storybook && opn docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out docs && cp -r assets docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json docs/typedoc.json && cp -r assets docs",
    "doc:build-storybook": "build-storybook -c ./bluebase/storybook/configs -o docs/storybook",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d docs",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "all": "run-s reset test cov:check doc:html",
    "prepublishOnly": "yarn remove expo react-native",
    "size": "size-limit",
    "storybook:start": "bluebase storybook:start",
    "storybook-native": "bluebase storybook-native:start",
    "storybook": "start-storybook -p 6006 --config-dir ./bluebase/storybook/configs",
    "screenshot": "storybook-chrome-screenshot -p 9001 -c ./bluebase/storybook/configs",
    "build-storybook": "build-storybook",
    "web:start": "bluebase web:start",
    "expo:start": "bluebase expo:start"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save",
    "cov": "Rebuild, run tests, then create and open the coverage report",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "prepare-release": "One-step: clean, build, test, publish docs, and prep a release"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@bluebase/component-mapper": "^1.4.0",
    "@bluebase/components": "^5.22.0",
    "expo": "^36.0.2",
    "formik": "^2.1.3",
    "lodash.isnil": "^4.0.0",
    "lodash.isstring": "^4.0.1",
    "react-native": "^0.61.5",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@bluebase/code-standards": "^1.3.3",
    "@bluebase/core": "^5.11.0",
    "@bluebase/plugin-apollo": "^1.1.1",
    "@bluebase/plugin-material-ui": "^2.11.3",
    "@bluebase/plugin-react-native-paper": "^2.3.3",
    "@bluebase/plugin-vector-icons": "^0.2.0",
    "@bluebase/storybook-addon": "^3.0.0",
    "@expo/webpack-config": "^0.10.11",
    "@storybook/addon-actions": "^5.3.9",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-info": "^5.3.9",
    "@storybook/addon-links": "^5.3.9",
    "@storybook/addon-viewport": "^5.3.9",
    "@storybook/addons": "^5.3.9",
    "@storybook/react": "^5.3.9",
    "@storybook/react-native": "^5.3.9",
    "@types/deepmerge": "^2.2.0",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/enzyme-async-helpers": "^0.9.1",
    "@types/jest": "^25.1.0",
    "@types/lodash.isnil": "^4.0.6",
    "@types/lodash.isstring": "^4.0.6",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-native": "^0.61.7",
    "@types/react-test-renderer": "^16.9.2",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-client": "^2.6.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "babel-preset-expo": "^8.0.0",
    "codacy-coverage": "^3.4.0",
    "codecov": "^3.6.2",
    "commitizen": "^3.1.1",
    "cross-fetch": "^3.0.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-async-helpers": "^0.9.1",
    "graphql": "^14.3.1",
    "graphql-tag": "^2.10.1",
    "jest": "^25.1.0",
    "jest-enzyme": "^7.1.2",
    "jsdom": "^16.0.1",
    "npm-run-all": "^4.1.3",
    "opn-cli": "^5.0.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-apollo": "^2.5.8",
    "react-dom": "^16.12.0",
    "react-native-storybook-loader": "^1.8.1",
    "react-native-typescript-transformer": "^1.2.13",
    "react-native-web": "^0.12.0",
    "react-test-renderer": "^16.12.0",
    "remark-cli": "^6.0.1",
    "remark-preset-lint-recommended": "^3.0.3",
    "schedule": "^0.5.0",
    "size-limit": "^4.4.2",
    "trash-cli": "^3.0.0",
    "ts-jest": "^25.0.0",
    "tslint": "5.11.0",
    "typedoc": "^0.16.9",
    "typescript": "3.7.5",
    "waait": "^1.0.5",
    "wait-for-expect": "^3.0.1"
  },
  "peerDependencies": {
    "@bluebase/core": "^5.11.0",
    "@bluebase/plugin-apollo": "^1.1.0",
    "react": "^16.8.0"
  },
  "prettier": {
    "singleQuote": true,
    "useTabs": true,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  }
}
