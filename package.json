{
  "name": "@bluebase/plugin-json-schema-components",
  "description": "A utility to build pluggable components based on JSON schema!",
  "author": "BlueEast Team <code@blueeast.com>",
  "version": "0.0.3",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.js",
  "repository": "https://github.com/BlueBaseJS/plugin-json-schema-components",
  "license": "MIT",
  "keywords": [],
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "size-limit": [
    {
      "limit": "30 KB",
      "webpack": false,
      "path": "dist/**/!(*.test).js",
      "running": false
    }
  ],
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "src",
        "bluebase/storybook-native"
      ],
      "pattern": "**/*.stories.tsx",
      "outputFile": "bluebase/storybook-native/storybook/storyLoader.js"
    }
  },
  "scripts": {
    "storybook-native:start": "bluebase storybook-native:start",
    "start": "yarn run storybook",
    "clean": "rimraf coverage dist tmp",
    "watch": "tsc -w -p tsconfig.json",
    "watch:test": "jest --watch",
    "info": "npm-scripts-info",
    "build": "run-s clean && run-p build:* && cp -r ./dist/src/* ./dist && rm -r ./dist/src && yarn run size",
    "build:main": "tsc -p tsconfig.json && babel ./src --out-dir dist --ignore \"**/__tests__\",\"**/__stories__\" --extensions \".ts,.tsx,.js,.jsx\"",
    "fix": "run-s fix:*",
    "fix:lint": "eslint src bluebase --ext=ts,tsx --fix .",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:md": "remark . -o",
    "test": "run-s build test:*",
    "test:only": "jest --coverage",
    "test:lint": "eslint src bluebase --ext=ts,tsx",
    "test:md": "remark . -f",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "commit": "git-cz",
    "report-coverage": "codecov && cat ./coverage/lcov.info | codacy-coverage",
    "doc": "run-s doc:html && run-s doc:build-storybook && opn docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out docs && cp -r assets docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json docs/typedoc.json && cp -r assets docs",
    "doc:build-storybook": "build-storybook -c ./bluebase/storybook/configs -o docs/storybook",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d docs",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "all": "run-s reset test cov:check doc:html",
    "prepublishOnly": "yarn remove expo react-native",
    "size": "size-limit",
    "storybook:start": "bluebase storybook:start",
    "storybook-native": "bluebase storybook-native:start",
    "storybook": "start-storybook -p 6006 --config-dir ./bluebase/storybook/configs",
    "screenshot": "storybook-chrome-screenshot -p 9001 -c ./bluebase/storybook/configs",
    "build-storybook": "build-storybook",
    "web:start": "bluebase web:start",
    "expo:start": "bluebase expo:start"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@bluebase/component-mapper": "^1.4.0",
    "@bluebase/components": "^6.4.0",
    "expo": "^43.0.0",
    "formik": "^2.2.0",
    "lodash.get": "^4.4.2",
    "lodash.isnil": "^4.0.0",
    "lodash.isstring": "^4.0.1",
    "react-native": "0.64.2",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@apollo/client": "^3.4.16",
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.12.9",
    "@bluebase/code-standards": "^2.11.1",
    "@bluebase/core": "^6.1.1",
    "@bluebase/plugin-apollo": "^4.0.0",
    "@bluebase/plugin-material-ui": "^3.6.0",
    "@bluebase/plugin-react-native-paper": "^3.1.1",
    "@bluebase/plugin-vector-icons": "^0.4.0",
    "@bluebase/storybook-addon": "^3.0.0",
    "@expo/webpack-config": "^0.16.2",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@storybook/react-native": "^5.3.25",
    "@types/deepmerge": "^2.2.0",
    "@types/enzyme": "^3.10.7",
    "@types/enzyme-async-helpers": "^0.9.1",
    "@types/jest": "^26.0.14",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.isnil": "^4.0.6",
    "@types/lodash.isstring": "^4.0.6",
    "@types/react": "~17.0.21",
    "@types/react-dom": "~17.0.9",
    "@types/react-native": "~0.64.12",
    "@types/react-test-renderer": "^16.9.3",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.5.2",
    "babel-loader": "^8.1.0",
    "babel-preset-expo": "8.5.1",
    "codacy-coverage": "^3.4.0",
    "codecov": "^3.8.0",
    "commitizen": "^4.2.1",
    "cross-fetch": "^3.0.6",
    "enzyme": "^3.11.0",
    "enzyme-async-helpers": "^0.9.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-import-order-alphabetical": "^1.0.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.4",
    "graphql": "^15.3.0",
    "jest": "^26.5.3",
    "jest-enzyme": "^7.1.2",
    "jest-expo": "^43.0.0",
    "jsdom": "^16.4.0",
    "npm-run-all": "^4.1.3",
    "opn-cli": "^5.0.0",
    "prettier": "^2.1.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-native-storybook-loader": "^2.0.2",
    "react-native-typescript-transformer": "^1.2.13",
    "react-native-web": "0.17.1",
    "react-test-renderer": "^16.13.1",
    "remark-cli": "^8.0.1",
    "remark-preset-lint-recommended": "^5.0.0",
    "schedule": "^0.5.0",
    "size-limit": "^1.3.7",
    "trash-cli": "^3.1.0",
    "ts-jest": "^26.4.1",
    "typedoc": "^0.19.2",
    "typescript": "~4.3.5",
    "waait": "^1.0.5",
    "wait-for-expect": "^3.0.2"
  },
  "peerDependencies": {
    "@bluebase/core": "^5.11.0",
    "@bluebase/plugin-apollo": "^4.0.0",
    "react": "^16.8.0"
  },
  "prettier": {
    "singleQuote": true,
    "useTabs": true,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  }
}
